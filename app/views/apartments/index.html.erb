<h1>Listing apartments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Staff</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Address</th>
    <th>Road</th>
    <th>Street</th>
    <th>Province</th>
    <th>Amphur</th>
    <th>District</th>
    <th>Postcode</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.name %></td>
    <td><%= apartment.staff %></td>
    <td><%= apartment.telephone %></td>
    <td><%= apartment.email %></td>
    <td><%= apartment.address %></td>
    <td><%= apartment.road %></td>
    <td><%= apartment.street %></td>
    <td><%= apartment.province_id %></td>
    <td><%= apartment.amphur_id %></td>
    <td><%= apartment.district_id %></td>
    <td><%= apartment.postcode %></td>
    <td><%= apartment.latitude %></td>
    <td><%= apartment.longitude %></td>
    <td><%= apartment.description %></td>
    <td><%= link_to 'Show', apartment %></td>
    <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
    <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

