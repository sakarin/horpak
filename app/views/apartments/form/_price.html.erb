<div class="title-group">
  <div class="title">
    <h3>
      <div class="RG"></div>
      ค่าใช้จ่าย
    </h3>
  </div>
</div>


<div id="price-water">
  <div class="row-fluid">
    <div class="price-label control-label span1">ค่่าน้ำ</div>
    <div class="span9">
      <div class="row-fluid dashed_row">
        <div class="label-price span2">
          <%= f.radio_button 'water_price_type', '1', class: "water-price-select" %>
          <span style="width: 100px;">ตามยูนิตที่ใช้</span>
        </div>
        <div class="input-price span4">

          <%= f.text_field :water_price, :class => "input-mini price-input water-price-input", :readonly => f.object.water_price.blank? ? true : false %>
          บาทต่อยูนิต
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span9">
      <div class="row-fluid dashed_row">
        <div class="label-price span2">
          <%= f.radio_button 'water_price_type', '2', class: "water-price-select" %>
          <span style="width: 100px;">เหมาจ่าย</span>
        </div>
        <div class="input-price span7">
          <%= f.text_field :water_price_monthly_per_person, :class => "input-mini price-input  water-price-input", :readonly => f.object.water_price_monthly_per_person.blank? ? true : false %>

          บาทต่อคน/เดือน
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span9">
      <div class="row-fluid dashed_row">
        <div class="label-price span2">
          <%= f.radio_button 'water_price_type', '3', class: "water-price-select" %>
          <span style="width: 100px;">เหมาจ่าย</span>
        </div>
        <div class="input-price span7">
          <%= f.text_field :water_price_monthly_per_room, :class => "input-mini price-input water-price-input", :readonly => f.object.water_price_monthly_per_room.blank? ? true : false %>

          บาทต่อห้อง/เดือน
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span9">
      <div class="row-fluid last_dashed_row">
        <div class="label-price span3">
          <%= f.radio_button 'water_price_type', '4', class: "water-price-select" %>
          <span style="width: 200px;">ตามมิเตอร์การประปา</span>
        </div>

        <div class="input-price span8">
          <%= f.text_field :water_price_remark, :class => "input-large price-input  water-price-input", :readonly => f.object.water_price_remark.blank? ? true : false %>
        </div>
      </div>
    </div>
  </div>
</div>
<%#= f.input :water_price_type, :as => :radio_buttons,
            :collection => [["1", 'ตามยูนิตที่ใช้'], ["2", 'เหมาจ่าย'], ['3', "เหมาจ่าย"], ['4', "ตามมิเตอร์การประปา"]],
            :label_method => :last,
            :value_method => :first %>

<div id="price-electric">
  <div class="row-fluid">
    <div class="price-label control-label span1">ค่าไฟ</div>
    <div class="span9">
      <div class="row-fluid dashed_row">
        <div class="label-price span2">
          <%= f.radio_button 'electric_price_type', '1', class: "electric-price-select" %>
          <span style="width: 100px;">ตามยูนิตที่ใช้</span>
        </div>
        <div class="input-price span4">
          <%= f.text_field :electric_price, :class => "input-mini price-input electric-price-input", :readonly => f.object.electric_price.blank? ? true : false %>

          บาทต่อยูนิต
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span9">
      <div class="row-fluid last_dashed_row">
        <div class="label-price span3">
          <%= f.radio_button 'electric_price_type', '2', class: "electric-price-select" %>
          <span style="width: 200px;">ตามมิเตอร์การไฟฟ้า</span>
        </div>
        <div class="input-price span8">
          <%= f.text_field :electric_price_remark, :class => "input-large price-input electric-price-input", :readonly => f.object.electric_price_remark.blank? ? true : false  %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="clearfix"></div>

<div class="form-horizontal">
  <%= f.input :deposit, input_html: {class: 'input-large'} %>
  <%= f.input :advance_fee, input_html: {class: 'input-large'} %>
  <%= f.input :phone_price, input_html: {class: 'input-large'} %>
  <%= f.input :internet_price, input_html: {class: 'input-large'} %>
</div>


