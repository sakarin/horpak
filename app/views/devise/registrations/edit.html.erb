<div class="span11">
  <div class="head-title">
    <h2>แก้ไข<%= t('activerecord.models.user') %></h2>
  </div>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :class => 'form-vertical'}) do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors resource %>
      <div class="control-group">
        <label class="control-label" for="property_type">รูปประจำตัว</label>

        <div class="controls">
          <div class="fileupload fileupload-new" data-provides="fileupload">
            <div class="fileupload-new thumbnail" style="width: 100px; height: 100px;">
              <% unless @user.avatar? %>
                  <img src="http://www.placehold.it/100x100/EFEFEF/AAAAAA&text=no+image"/>
              <% else %>
                  <%= image_tag(@user.avatar_url) if @user.avatar? %>
              <% end %>
            </div>
            <div class="fileupload-preview fileupload-exists thumbnail" style="width: 100px; height: 100px; line-height: 0px;"></div>
            <div>
              <span class="btn btn-file"><span class="fileupload-new">เลือกรูป</span><span class="fileupload-exists">เปลี่ยน</span><%= f.file_field :avatar %></span>
              <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">ลบรูป</a>
            </div>
          </div>
        </div>
      </div>

      <%= f.input :name, :autofocus => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :telephone, :required => false %>

      <% if current_user.provider.blank? %>
          <%= f.input :password, :autocomplete => "off", :hint => "ปล่อยให้มันว่างเปล่าถ้าคุณไม่ต้องการที่จะเปลี่ยนมัน", :required => false %>
          <%= f.input :password_confirmation, :required => false %>
          <%= f.input :current_password, :hint => "เราต้องใช้รหัสผ่านปัจจุบันของคุณเพื่อยืนยันการเปลี่ยนแปลงของคุณ", :required => true %>
      <% end %>

      <%= f.input :email_notice, :required => false %>
      <%= f.submit t('devise.button.update'), :class => 'btn-primary' %>
  <% end %>
  <h3>ยกเลิกบัญชีของคุณ</h3>

  <p> <%= link_to "ยกเลิกบัญชีของคุณ", registration_path(resource_name), :data => {:confirm => "คุณแน่ใจหรือไม่ ?"}, :method => :delete %>
    .</p>
  <%= link_to "ย้อนกลับ", :back %>
</div>
